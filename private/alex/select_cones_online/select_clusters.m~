function select_clusters(cones)

global myMap conesSavePosition myCluster

hPlot=findobj('position',conesSavePosition);
subplot(hPlot);
hold on
myXaxis=get(gca,'XLim');
myYaxis=get(gca,'YLim');
    
allCones=cell2mat(cones');

flag=1;
cnt=1;
if isempty(myCluster)
    myCluster=cell(20,1);    
end

i=1;
while ~isempty(myCluster{i})
    i=i+1;
end

markers='*vd>+<x.........';

t=unique(myMap);
for i=1:length(t)
    [pos_y(i),pos_x(i)]=find(myMap==t(i),1);
end
while flag
    

    coords=round(getrect);
    x=[coords(1) coords(1)+coords(3)];
    y=[coords(2) coords(2)+coords(4)];
    polyg_x=[x(1), x(1), x(2), x(2), x(1)];   
    polyg_y=[y(1), y(2), y(2), y(1), y(1)];
    

    IN = inpolygon(pos_x,pos_y,polyg_x,polyg_y);
    figure
    hold on
    plot(polyg_x,polyg_y,pos_x,pos_y,'r+')
    axis ij

    
    [x,y]=ginput(1);
    x=round(x);
    y=round(y); 
  
    if coords(1)>myXaxis(1) && coords(2)<myXaxis(2) && coords(3)>myYaxis(1) && coords(4)<myYaxis(2)           

        myCluster{i}=[myCluster{i}; myMap(y,x)];
        plot(x,y,'color',[1 1 1], 'marker', markers(i))

    else
        flag=0;
    end

    
end
