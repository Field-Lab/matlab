function [crossval_raw] = rawcrossval_performance_fracvar(raster_binned_sim,raster_binned_rec,smoothbins)

%%% PURPOSE %%%
% Compute cross-validated Fraction of Variance Explained
% Ability of Simuluated Raster to imitate (explain) recorded raster
% Only 


%%% INPUTS  %%%


%%% OUTPUTS %%%
% Crossval_Raw

%%% CALLS %%%
% none

% AKHeitman 2014-11-26
% AKHeitman 2014-12-04 clean up / comment
%%

% BASIC QUANTITIES
reps        = size(raster_binned_rec,1); 
bins        = size(raster_binned_rec,2); 


% SETUP STRUCTURE
crossval_raw.sigma_bin           = smoothbins;
crossval_raw.metric_raw          = zeros(length(smoothbins),1);
crossval_raw.metric_name         = 'Fraction of Variance Explained';
crossval_raw.metric_note         = 'Uses just average signals, No Normalization';
crossval_raw.notes.fracvar_eqn   = 'FracVar(model) := 1 - [L2norm(model - smoothed_spiketrain) / var(smoothed_spiketrain)]';
crossval_raw.timestamp           = datestr(clock);
crossval_raw.mfile_name          = mfilename('fullpath');


binarysignal_1 = sum(raster_binned_sim , 1) / reps;
binarysignal_2 = sum(raster_binned_rec , 1) / reps;


%%
% LOOP THROUGH THE DIFFERENT TIME SCALES
for i_smoothbin = 1:length(smoothbins)
    
    % DEFINE CONVOLUTION VECTOR
    sig_val        = smoothbins(i_smoothbin);
    convolve_index = [-4*sig_val:4*sig_val];
    convolve_vec   = normpdf(convolve_index,0,sig_val) / sum(normpdf(convolve_index,0,sig_val) );
    
    % SMOOTH EACH SIGNAL
    dummy_1         = conv(binarysignal_1, convolve_vec);
    dummy_2         = conv(binarysignal_2, convolve_vec);
    smoothsignal_1  = dummy_1((4*sig_val+1):(end-4*sig_val));
    smoothsignal_2  = dummy_2((4*sig_val+1):(end-4*sig_val));
    
    % FRAC VAR
    var_rec = var(smoothsignal_2);
    l2_error  = (1/bins) * sum( (smoothsignal_1 - smoothsignal_2).^2);
    frac_var = 1 - l2_error / var_rec;
    
    crossval_raw.metric_raw = 
end
    
end